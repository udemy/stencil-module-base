{
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/bin": true,
    "**/.task": true,
    "**/node_modules": true,
  },
  "editor.formatOnSave": true,
  "shellcheck.customArgs": ["-P", "SCRIPTDIR", "-x"],
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}
